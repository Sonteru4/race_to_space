version: '3.8'

services:
  # PostgreSQL with pgvector for embeddings
  postgres:
    image: pgvector/pgvector:pg16
    container_name: rsi-x-postgres
    environment:
      POSTGRES_DB: rsix_db
      POSTGRES_USER: rsix_user
      POSTGRES_PASSWORD: rsix_pass_2024
      POSTGRES_HOST_AUTH_METHOD: trust
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./db/init:/docker-entrypoint-initdb.d
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U rsix_user -d rsix_db"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - rsix_network

  # Neo4j for knowledge graph
  neo4j:
    image: neo4j:5.13-community
    container_name: rsi-x-neo4j
    environment:
      NEO4J_AUTH: neo4j/rsix_graph_2024
      NEO4J_PLUGINS: '["apoc", "graph-data-science"]'
      NEO4J_dbms_security_procedures_unrestricted: apoc.*,gds.*
      NEO4J_dbms_memory_heap_max__size: 2G
    ports:
      - "7474:7474"  # HTTP
      - "7687:7687"  # Bolt
    volumes:
      - neo4j_data:/data
      - neo4j_logs:/logs
      - ./cypher/init:/import
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider localhost:7474 || exit 1"]
      interval: 15s
      timeout: 10s
      retries: 5
    networks:
      - rsix_network

  # MinIO for artifact storage (models, reports, datasets)
  minio:
    image: minio/minio:latest
    container_name: rsi-x-minio
    command: server /data --console-address ":9001"
    environment:
      MINIO_ROOT_USER: rsix_minio
      MINIO_ROOT_PASSWORD: rsix_minio_2024
    ports:
      - "9000:9000"  # API
      - "9001:9001"  # Console
    volumes:
      - minio_data:/data
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/minio/health/live"]
      interval: 15s
      timeout: 10s
      retries: 3
    networks:
      - rsix_network

  # MLflow for experiment tracking
  mlflow:
    image: ghcr.io/mlflow/mlflow:v2.9.2
    container_name: rsi-x-mlflow
    command: >
      mlflow server
      --backend-store-uri postgresql://rsix_user:rsix_pass_2024@postgres:5432/rsix_db
      --default-artifact-root s3://mlflow/
      --host 0.0.0.0
      --port 5000
    environment:
      MLFLOW_S3_ENDPOINT_URL: http://minio:9000
      AWS_ACCESS_KEY_ID: rsix_minio
      AWS_SECRET_ACCESS_KEY: rsix_minio_2024
    ports:
      - "5000:5000"
    depends_on:
      postgres:
        condition: service_healthy
      minio:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5000/health"]
      interval: 15s
      timeout: 10s
      retries: 5
    networks:
      - rsix_network

  # Redis for caching and task queue
  redis:
    image: redis:7-alpine
    container_name: rsi-x-redis
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    command: redis-server --appendonly yes
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - rsix_network

  # Elasticsearch for full-text search (optional, for RAG enhancement)
  elasticsearch:
    image: docker.elastic.co/elasticsearch/elasticsearch:8.11.0
    container_name: rsi-x-elasticsearch
    environment:
      - discovery.type=single-node
      - xpack.security.enabled=false
      - "ES_JAVA_OPTS=-Xms512m -Xmx512m"
    ports:
      - "9200:9200"
    volumes:
      - es_data:/usr/share/elasticsearch/data
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:9200/_cluster/health || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 5
    networks:
      - rsix_network

  # FastAPI Backend
  api:
    build:
      context: .
      dockerfile: Dockerfile.api
    container_name: rsi-x-api
    command: uvicorn src.api.main:app --host 0.0.0.0 --port 8000 --reload
    environment:
      DATABASE_URL: postgresql://rsix_user:rsix_pass_2024@postgres:5432/rsix_db
      NEO4J_URI: bolt://neo4j:7687
      NEO4J_USER: neo4j
      NEO4J_PASSWORD: rsix_graph_2024
      REDIS_URL: redis://redis:6379/0
      MLFLOW_TRACKING_URI: http://mlflow:5000
      MINIO_ENDPOINT: minio:9000
      MINIO_ACCESS_KEY: rsix_minio
      MINIO_SECRET_KEY: rsix_minio_2024
      ELASTICSEARCH_URL: http://elasticsearch:9200
      PYTHONPATH: /app
    ports:
      - "8000:8000"
    volumes:
      - ./src:/app/src
      - ./data:/app/data
      - ./models:/app/models
    depends_on:
      postgres:
        condition: service_healthy
      neo4j:
        condition: service_healthy
      redis:
        condition: service_healthy
      mlflow:
        condition: service_healthy
    networks:
      - rsix_network

  # Streamlit Dashboard
  streamlit:
    build:
      context: .
      dockerfile: Dockerfile.streamlit
    container_name: rsi-x-streamlit
    command: streamlit run src/app/streamlit_app.py --server.port 8501 --server.address 0.0.0.0
    environment:
      API_BASE_URL: http://api:8000
      STREAMLIT_SERVER_MAX_UPLOAD_SIZE: 500
      PYTHONPATH: /app
    ports:
      - "8501:8501"
    volumes:
      - ./src:/app/src
      - ./data:/app/data
    depends_on:
      - api
    networks:
      - rsix_network

  # Jupyter Lab for exploration
  jupyter:
    build:
      context: .
      dockerfile: Dockerfile.jupyter
    container_name: rsi-x-jupyter
    command: jupyter lab --ip=0.0.0.0 --port=8888 --no-browser --allow-root --NotebookApp.token=''
    environment:
      JUPYTER_ENABLE_LAB: "yes"
      DATABASE_URL: postgresql://rsix_user:rsix_pass_2024@postgres:5432/rsix_db
      NEO4J_URI: bolt://neo4j:7687
      NEO4J_USER: neo4j
      NEO4J_PASSWORD: rsix_graph_2024
      MLFLOW_TRACKING_URI: http://mlflow:5000
      PYTHONPATH: /app
    ports:
      - "8888:8888"
    volumes:
      - ./notebooks:/app/notebooks
      - ./src:/app/src
      - ./data:/app/data
      - ./models:/app/models
    depends_on:
      - postgres
      - neo4j
      - mlflow
    networks:
      - rsix_network

networks:
  rsix_network:
    driver: bridge

volumes:
  postgres_data:
  neo4j_data:
  neo4j_logs:
  minio_data:
  redis_data:
  es_data:

